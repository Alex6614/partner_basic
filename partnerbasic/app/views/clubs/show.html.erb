<p id="notice"><%= notice %></p>

<p>
  <strong>Club name:</strong>
  <%= @club.club_name %>
</p>

<p>
  <strong>University name:</strong>
  <%= @club.university_name %>
</p>

<p>
  <strong>Club link:</strong>
  <%= @club.club_link %>
</p>

<p>
  <strong>Description:</strong>
  <%= @club.description %>
</p>

<p>
  <strong>Photo link:</strong>
  <%= @club.photo_link %>
</p>

<p>
  <strong>Verified:</strong>
  <%= @club.verified %>
</p>

<% @club_members.each do |member| %>
  <tr>
    <td><%= member.name %></td>
    <td><%= link_to 'Show', member %></td>
    <% if adminv2?(member) %>
      ADMIN
    <% else %>
      NOT ADMIN
    <% end %>
    <br>
  </tr>
<% end %>

<br>
<% if !member? && student? %>
<%= link_to 'Join Club', add_club_member_club_path, method: :post %>
<% end %>

<% if member? && student? %>
<%= link_to 'Leave Club', remove_club_member_club_path, method: :post %>
<% end %>
<br>

<% @club_groups.each do |group| %>
  <tr>
    <td><%= group.group_name %></td>
    <td><%= link_to 'Show', club_group_path(@club, group) %></td>
    <br>
  </tr>
<% end %>

<br>

<%= form_with(url: create_group_club_path, local:true) do |form|%>
  <div class="field">
    <%= form.label :group_name%>
    <%= form.text_field :group_name%>
  </div>
  <div class="actions">
    <%= form.submit 'Create', disabled: false%>
  </div>
<%end%>

<%= link_to 'Edit', edit_club_path(@club) %> |
<%= link_to 'Back', clubs_path %>
