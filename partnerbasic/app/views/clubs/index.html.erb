<p id="notice"><%= notice %></p>

<h1>Student Clubs</h1>
<% @clubs.each do |club| %>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"> <%= club.club_name %> </h5>
    <% if !club.university_name.empty? %>
      <%= club.university_name %>
    <% end %>
    <% if !club.photo_link.empty? %>
      <%= image_tag("#{club.photo_link}", :style => 'width: 50px; height: 50px; display: block; margin: auto') %>
    <% end %>
    <p class="card-text"><%= club.description %></p>
    <%= link_to 'Show', club, class: 'btn-info btn', :style => 'color: white' %>
  </div>
</div>
<% end %>

<br>
<% if logged_in? && student? %>
<%= link_to 'Add Your Club!', new_club_path, class: 'btn-success btn', :style => 'color: white' %>
<% end %>
