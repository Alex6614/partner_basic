<p id="notice"><%= notice %></p>

<h1>Companies</h1>
<% @users.each do |user| %>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"> <%= user.name %> </h5>
    <% if !user.photo_link.empty? %>
      <%= image_tag("#{user.photo_link}", :style => 'width: 50px; height: 50px; display: block; margin: auto') %>
    <% end %>
    <p class="card-text"><%= user.description %></p>
    <%= link_to 'Show', user, class: 'btn-info btn', :style => 'color: white' %>
  </div>
</div>
<% end %>
